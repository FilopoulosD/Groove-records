<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= album.title %>">
  </div>

 
    
  <div>
    <label>Artist</label>
    <select name="artist">
    <% artists.forEach(artist => { %>
      <% if (artist.id === album.artist) { %>
        <option selected label="<%= artist.name %>" value="<%= artist.id %>"><%= artist.name %></option>
      <% } else { %>
        <option label="<%= artist.name %>" value="<%= artist.id %>"><%= artist.name %></option>
      <% } %>

    <% }) %>
    </select>
  </div>

  <div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
          value="<%= album.publishDate == null ? '' : album.publishDate.toISOString().split('T')[0] %>">
  </div>
  <div>
    <label>Youtube Url </label>
    <input type="string" name="tracksCount" value="<%= album.tracksCount %>">
  </div>
  </div>

  <div>
    <label>Cover</label>
    <input type="file" name="cover">
  </div>
  